	numpages = {8},
	pages = {1--8},
	publisher = {Association for Computing Machinery},
	series = {TAMODIA '05},
	title = {The System-User Paradox: Do We Need Models or Should We Grow Ecologies?},
	url = {https://doi.org/10.1145/1122935.1122937},
	year = {2005},
	bdsk-url-1 = {https://doi.org/10.1145/1122935.1122937}}

