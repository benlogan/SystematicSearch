	issn = {0360-3199},
	journal = {International Journal of Hydrogen Energy},
	keywords = {Waste-to-energy incineration, Solar thermal integration, Steam reheating, Reverse osmosis desalination, Hydrogen production, Absorption refrigeration},
	title = {Thermal modelling and analysis of a novel solar integrated waste-to-energy plant for sustainable society},
	url = {https://www.sciencedirect.com/science/article/pii/S0360319923036480},
	year = {2023},
	bdsk-url-1 = {https://www.sciencedirect.com/science/article/pii/S0360319923036480},
