@article{ARSLAN202326652,
title = {Investigation of green hydrogen production and development of waste heat recovery system in biogas power plant for sustainable energy applications},
journal = {International Journal of Hydrogen Energy},
volume = {48},
number = {69},
pages = {26652-26664},
year = {2023},
