	doi = {10.1145/3546155.3547277},
	isbn = {9781450396998},
	keywords = {Sustainability, Autonomous Systems, Critical Fiction, Behavior Change, Artificial Intelligence},
	location = {Aarhus, Denmark},
	numpages = {5},
	publisher = {Association for Computing Machinery},
	series = {NordiCHI '22},
	title = {European Union's Green Smart Directive or How Resource-Conscious Smart Systems Saved the World},
	url = {https://doi.org/10.1145/3546155.3547277},
	year = {2022},
	bdsk-url-1 = {https://doi.org/10.1145/3546155.3547277}}

