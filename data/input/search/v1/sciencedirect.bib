@article{JINGKUANG2011147,
title = {Establishment and application of performance assessment model of waste management in architectural engineering projects in China},
journal = {Systems Engineering Procedia},
volume = {1},
pages = {147-155},
year = {2011},
note = {Engineering and Risk Management},
