@article{ANANTHAKRISHNAN2022100764,
title = {Robust soft computing control algorithm for sustainable enhancement of renewable energy sources based microgrid: A hybrid Garra rufa fish optimization – Isolation forest approach},
journal = {Sustainable Computing: Informatics and Systems},
